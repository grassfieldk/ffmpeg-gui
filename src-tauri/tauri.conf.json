{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FFmpeg GUI",
  "version": "0.1.0",
  "identifier": "dev.grassfield.ffmpeg-gui",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "FFmpeg GUI",
        "width": 960,
        "height": 900,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
